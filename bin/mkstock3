#!/usr/bin/env bash

if [ ! -d stock ]; then
    mkdir stock
    last_file=$((10#$(basename -s .jpg $(ls -r [0-9][0-9][0-9].jpg | head -1))))
    for i1 in $(seq -f %03g 1 3 $last_file); do
        n=$(((10#${i1}+2)/3))
        n3=00${n}
        n3=${n3:(-3)}
        i2=00$((10#${i1}+1))
        i2=${i2:(-3)}
        i3=00$((10#${i1}+2))
        i3=${i3:(-3)}
        mv ${i1}.jpg stock/${n3}a.jpg
        mv ${i2}.jpg stock/${n3}b.jpg
        mv ${i3}.jpg stock/${n3}c.jpg
    done
fi
