#!/usr/bin/env bash

if [ -z "$1" ]; then
    echo usage: ${0##*/} FILE_NAME
else
    while [ ! -z "$1" -a -f "$1" ]; do
        if [ "$1" != "${1/-miff/}" ]; then
            mv "$1" "${1/-miff/}"
            echo "${1/-miff/}"
        else
            echo "$1"
        fi
        shift
    done
fi
